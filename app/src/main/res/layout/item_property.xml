<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_view_placeholder"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/download" />

        <TextView
            android:id="@+id/text_view_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Card title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_view_card_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/land_area_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/land_area"
                android:src="@drawable/ic_land_area" />

            <TextView
                android:id="@+id/text_view_land_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="land area"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/building_area_icon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:contentDescription="@string/building_area"
                android:src="@drawable/ic_building_area" />

            <TextView
                android:id="@+id/text_view_building_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="Building Area"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/certificate_icon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:contentDescription="@string/certificate"
                android:src="@drawable/ic_certificate" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/bedroom_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/bedroom"
                android:src="@drawable/ic_bedroom" />

            <TextView
                android:id="@+id/text_view_bedroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="Bedroom"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/bathroom_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/bathroom"
                android:src="@drawable/ic_bathroom" />

            <TextView
                android:id="@+id/text_view_bathroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="Bathroom"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/garage_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/garage"
                android:src="@drawable/ic_garage" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Price"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="See More" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
